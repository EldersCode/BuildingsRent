<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_pic_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/header"

                android:weightSum="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="Edit Profile"
                    android:textSize="22dp"
                    android:layout_marginTop="13dp"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/mepng"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>



                <Button
                    android:id="@+id/save_profile_btn"
                    android:paddingLeft="130dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="#0099ff"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@mipmap/save1"
                    android:paddingRight="135dp"
                    android:text="Save Changes"


                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:orientation="vertical"
                android:paddingLeft="15dp"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Name :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="center"
                    android:id="@+id/edit_profile_name"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint="enter your name here .. "
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:background="@drawable/edit_text_profile"
                    android:textSize="18sp" />


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Email :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="center"
                    android:id="@+id/edit_profile_email"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint="enter your email here .. "
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:background="@drawable/edit_text_profile"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="* Date of Birthday :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text_profile"
                    android:hint="enter your DOB here .. "
                    android:id="@+id/edit_profile_dob"
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="* Address :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:id="@+id/edit_profile_address"
                    android:gravity="center"
                    android:background="@drawable/edit_text_profile"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint="enter your Address here .. "
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="* City :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="center"
                    android:id="@+id/edit_profile_city"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint="enter your city name here .. "
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:background="@drawable/edit_text_profile"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="* Zip Code :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:id="@+id/edit_profile_zip"
                    android:hint="enter your Zip code here .. "
                    android:background="@drawable/edit_text_profile"
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="* Apt :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/edit_text_profile"
                    android:gravity="center"
                    android:id="@+id/edit_profile_abt"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint="Apt.. "
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="* Contact Number :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/edit_text_profile"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint="enter your contact number here .. "
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:id="@+id/edit_profile_contactNumber"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="* SSN or drivers license :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/edit_text_profile"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:id="@+id/edit_profile_license"
                    android:hint="enter your information here .. "
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:textSize="18sp" />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Confirm Password :"
                    android:textColor="@android:color/black" />


                <EditText

                    android:hint="enter your password confirmation"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@drawable/edit_text_profile"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:id="@+id/edit_profie_confirm"
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Certification :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="center"
                    android:id="@+id/edit_profile_certification"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint="your certificaiton here .. "
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:background="@drawable/edit_text_profile"
                    android:textSize="18sp" />


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Comment :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:gravity="center"
                    android:id="@+id/edit_profile_comment"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint=" ... "
                    android:textColor="@android:color/black"
                    android:textColorHint="#c0c0c0"
                    android:background="@drawable/edit_text_profile"
                    android:textSize="18sp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    />

            </LinearLayout>

        </LinearLayout>












    </ScrollView>



</LinearLayout>
